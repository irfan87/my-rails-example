<!DOCTYPE html>
<html>
  <head>
    <title>MyRailsExample</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<p class="notice"><%= notice %></p>
  	<p class="alert"><%= alert %></p>
  	<%= link_to 'Sign in', new_hacker_session_path %>
    <%= link_to 'Sign out', destroy_hacker_session_path, method: :delete %>
  	<%= link_to 'Sign up', new_hacker_registration_path %>
    <%= link_to 'Admin Sign in', new_admin_session_path %>
    <%= link_to 'Admin Sign out', destroy_admin_session_path, method: :delete %>
    <% if admin_signed_in? %>
      <%= link_to 'View Hacker List', admin_hacker_list_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
